@model ProjetBDMuretDave.Models.VisiteMedicale

@{
    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Êtes-vous sûr de supprimer cette visite médicale ?</h3>
<div>
    <h4>Visite médicale</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Emploi.Personne.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Emploi.Personne.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lieu.Localite)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lieu.Localite)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        if (Model.ExamenRealises.Count != 0)
        {
            <p>Pour supprimer une visite médicale, il faut supprimer ses examens avant.</p>
            @Html.ActionLink("Liste examens", "IndexExamen", "ExamenRealises", new { idVisite = Model.IdVisiteMedicale }, null)
        }
        else
        {
            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-default" /> |
                @Html.ActionLink("Retour à la liste ", "Index")
            </div>
        }

    }
</div>
